{
  "name": "Image Overlay Viewer",
  "short_name": "ImageViewer",
  "description": "A PWA for viewing and overlaying images.",
  "start_url": "index.html",
  "display": "standalone",
  "background_color": "#000000",
  "theme_color": "#000000",
  "icons": [
    {
      "src": "assets/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png"
    },
    {
      "src": "assets/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png"
    }
  ],
  "screenshots": [
    {
      "src": "assets/screenshot1.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide"
    },
    {
      "src": "assets/screenshot2.png",
      "sizes": "720x1280",
      "type": "image/png"
    }
  ],
  "scope": "/",
  "serviceworker": {
    "src": "service-worker.js",
    "scope": "/",
    "type": "module"
  }
}